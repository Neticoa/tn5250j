<?xml version="1.0" encoding="UTF-8"?>
<?import org.tn5250j.gui.TitledBorderedPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.CheckBox?>

<BorderPane
    fx:id="view"
	stylesheets="application.css"
	styleClass="opaque"
	fx:controller="org.tn5250j.sessionsettings.TabAttributesController"
	xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
	<top>
		<VBox alignment="CENTER" spacing="10">
			<style>
			  -fx-padding: 0 1em 1em 1em;
			</style>
        	<TitledBorderedPane fx:id="tabOptionsPane" title="??tabOptions??" labelPosition="TOP_LEFT">
        		<content>
        			<HBox alignment="CENTER">
						<VBox alignment="CENTER_LEFT">
							<CheckBox fx:id = "tabCloseCheck" />
						</VBox>
        			</HBox>
        		</content>
        	</TitledBorderedPane>
		</VBox>
	</top>
</BorderPane>
